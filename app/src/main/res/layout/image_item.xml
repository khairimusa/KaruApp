<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    <!-- this is card view for items-->
    <!--use linear layout to display a picture and all
        its attributes-->
    <LinearLayout
        android:id="@+id/image_item_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_uploaded_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/text_view_name_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:text="Item Name"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/browse_fragment_text_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text=" "
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/favourite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-45dp"
            android:background="@drawable/ic_favorite_border_black_24dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>